<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:background="@color/colorPrimary"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content">
            <TextView
                    android:text="@string/currentDay"
                    android:layout_width="match_parent"
                    android:textColor="@android:color/white"
                    android:layout_height="29dp" android:id="@+id/currentDayTV"
                    android:textSize="18sp" android:textAlignment="textStart" android:gravity="start"/>
            <TextView
                    android:text="@string/currentTime"
                    android:layout_width="match_parent"
                    android:layout_height="79dp"
                    android:textColor="@android:color/white"
                    android:id="@+id/currentTimeTV"
                    android:textSize="70sp" android:layout_marginTop="12dp"
            />
            <TextView
                    android:text="@string/locality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/localityTV"
                    android:textColor="@android:color/white"

                    android:layout_marginTop="16dp"
                    android:textSize="16sp"/>
        </LinearLayout>
        <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="refreshWeatherData"
                android:contentDescription="@string/refresh"
                android:id="@+id/refreshBtn" android:textSize="25sp" android:textStyle="bold"
                android:background="@drawable/button_background"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:src="@drawable/ic_refresh"
                android:textDirection="firstStrongRtl" android:textIsSelectable="false" android:textScaleX="1"/>
        <ImageButton
                android:contentDescription="@string/searchButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/searchBtn"
                android:layout_marginStart="8dp"
                android:background="@drawable/button_background"
                android:src="@drawable/ic_search"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textSize="25sp" android:textDirection="inherit"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:gravity="end"
            android:id="@+id/linearLayout4">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:id="@+id/linearLayout2">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView"
                    android:layout_weight="2"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/weatherimage"
                    app:srcCompat="@drawable/ic_moon"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                <TextView
                        android:text="@string/currentTemp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/currentTempTV"
                        android:textColor="@color/bodyTextColor"
                        android:textSize="45sp"
                        android:drawableEnd="@drawable/ic_temperature"
                        android:textAlignment="textEnd"/>
                <TextView
                        android:text="@string/pressure"
                        android:layout_width="match_parent"
                        android:textColor="@color/bodyTextColor"
                        android:drawableEnd="@drawable/ic_barometer"
                        android:drawablePadding="5dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/pressureTV" android:textSize="30sp"
                        android:textAlignment="textEnd"/>
                <TextView
                        android:text="@string/windSpeed"
                        android:layout_width="match_parent"
                        android:textColor="@android:color/holo_green_dark"
                        android:drawableEnd="@drawable/ic_wind"
                        android:drawablePadding="5dp"
                        android:layout_height="wrap_content" android:id="@+id/windSpeedTV" android:textSize="30sp"
                        android:textAlignment="textEnd"/>
                <TextView
                        android:text="Влажность"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_drop_icon"
                        android:drawablePadding="5dp"
                        android:textColor="@android:color/holo_green_dark"
                        android:textAlignment="textEnd"
                        android:id="@+id/humidityTV"
                        android:textSize="30sp"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/constraintLayout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <TextView
                android:text="Рассвет"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sunriseTV" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                android:drawableStart="@drawable/ic_sunrise"
                android:drawablePadding="5dp"
                android:textColor="@android:color/holo_green_dark"
                app:layout_constraintTop_toTopOf="parent" android:textSize="20sp"/>
        <TextView
                android:text="Закат"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sunsetTV"
                android:layout_marginTop="8dp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_sunset"
                android:textColor="@android:color/holo_green_dark"

                app:layout_constraintTop_toTopOf="parent" android:textSize="20sp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            app:layoutManager="LinearLayoutManager"
            android:id="@+id/weatherRecyclerView"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp" app:layout_constraintTop_toBottomOf="@+id/descriptionTV"/>
    <TextView
            android:text="Временами облачно"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/descriptionTV"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="22sp" android:textAlignment="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>